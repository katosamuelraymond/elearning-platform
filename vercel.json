{
    "version": 2,
    "builds": [
        {
            "src": "vite.config.js",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public/build"
            }
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "index.php",
            "use": "@vercel/php"
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ],
    "build": {
        "outputDirectory": "public/build"
    }
}
